<div class="goods--tickets--input--ticket-group" local-class="ticket-group-input" ...attributes>
  <div class="goods--tickets--input--ticket-group--info" local-class="ticket-group-info">
    <div class="goods--tickets--input--ticket-group--name" local-class="name">
      {{@ticketGroup.name}}
    </div>
    <div class="goods--tickets--input--ticket-group--price-label" local-class="price-label">
      {{#if @ticketGroup.priceLabel}}
        {{@ticketGroup.priceLabel}}
      {{/if}}
    </div>
    {{#if @ticketGroup.description}}
      <div class="goods--tickets--input--ticket-group--description" local-class="description">
        {{@ticketGroup.description}}
      </div>
    {{/if}}
  </div>

  <div class="goods--tickets--input--ticket-group--quantity" local-class="quantity">
    <button 
      class="goods--tickets--input--ticket-group--decrement-button"
      local-class="decrement-btn"
      disabled={{this.cannotDecrement}} 
      type="button"
      {{on "click" this.onDecrement}} 
    >
      {{svg-jar "minus-1" height="20px" width="20px"}}
    </button>
    
    <div 
      class="goods--tickets--input--ticket-group--quantity-value"
      local-class="quantity-value {{if (eq @quantity 0) "is-zero"}}"
    >
      {{@quantity}}
    </div>
    
    <button 
      class="goods--tickets--input--ticket-group--increment-button"
      disabled={{this.cannotIncrement}} 
      local-class="increment-btn"
      type="button"
      {{on "click" this.onIncrement}} 
    >
      {{svg-jar "plus-1" height="20px" width="20px"}}
    </button>
  
  </div>
</div>